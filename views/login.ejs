<%- include('partials/header') %>
<div class="login-box">
  <h1>Login</h1>
  <form action="/login" method="post">
  <div class="textbox">
    <i class="fas fa-user"></i>
    <input type="email" placeholder="User-Name (Email)" name="username">
  </div>
  <div class="textbox">
    <i class="fas fa-lock"></i>
    <input type="password" placeholder="Password" name="password">
  </div>
  <a href="/register" style="color: white;float: right;font-size: small">Don't have an account? Sign Up</a>
  <button type="submit" class="btn">LOGIN</button></form>
  <a class="btn btn-block btn-social btn-google" style="text-align: center;background-color: #dd4b39; #dd4b39" href="/auth/google" role="button">
    <i class="fab fa-google"></i>
    Login with Google
  </a>
  <h6 style="margin-top: 50px; text-align: center;">Copyright Â© 2022.</h6> 
</div>